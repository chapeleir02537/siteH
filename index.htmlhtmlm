<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nossa História</title>
    
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;600&family=Great+Vibes&family=Montserrat:wght@300;400;500;600&display=swap" rel="stylesheet">
    
    <style>
        /* --- CONFIGURAÇÕES VISUAIS --- */
        :root {
            --bg-color: #F9F7F2;      /* Off-White */
            --text-color: #5D4037;    /* Marrom Café */
            --rose-color: #D48BA0;    /* Rose Elegante */
            --rose-light: #ebd4dc;    
            --white: #ffffff;
        }

        body {
            background-color: var(--bg-color);
            color: var(--text-color);
            font-family: 'Montserrat', sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            min-height: 100vh;
            overflow-x: hidden;
            -webkit-tap-highlight-color: transparent;
        }

        header {
            text-align: center;
            padding: 60px 20px 20px 20px;
            max-width: 600px;
        }

        h1 {
            font-family: 'Cormorant Garamond', serif;
            font-size: 2.2rem;
            letter-spacing: 2px;
            text-transform: uppercase;
            color: var(--text-color);
            margin: 0;
        }

        .data-destaque {
            font-size: 0.85rem;
            color: var(--rose-color);
            font-weight: 600;
            letter-spacing: 1px;
            margin-top: 5px;
            margin-bottom: 30px;
        }

        .texto-intro {
            font-size: 1rem;
            line-height: 1.6;
            color: #795548;
            font-weight: 400;
        }

        /* --- RELÓGIO --- */
        .clock-container {
            display: flex;
            justify-content: center;
            gap: 12px;
            font-family: 'Cormorant Garamond', serif;
            color: #b0657b;
            margin: 20px 0 40px 0;
        }

        .time-block { text-align: center; }
        .time-number { font-size: 2rem; font-weight: 600; line-height: 1; }
        .time-label { font-size: 0.6rem; text-transform: uppercase; margin-top: 4px; color: #aaa; font-family: 'Montserrat', sans-serif; }
        .separator { font-size: 1.5rem; color: var(--rose-light); padding-top: 5px; }

        /* --- EU TE AMO --- */
        .love-wrapper {
            margin: 20px 0 50px 0;
            text-align: center;
            z-index: 10;
            cursor: pointer;
        }

        .love-text {
            font-family: 'Great Vibes', cursive;
            font-size: 3.5rem;
            color: var(--rose-color);
            transition: color 0.3s ease;
            user-select: none;
            display: inline-block;
        }

        .pulsing-slow {
            animation: heartBeatSlow 2s ease-in-out infinite; 
            color: #c04e6e; 
        }

        @keyframes heartBeatSlow {
            0% { transform: scale(1); }
            25% { transform: scale(1.1); }
            50% { transform: scale(1); }
            75% { transform: scale(1.1); }
            100% { transform: scale(1); }
        }

        .instrucao-toque {
            font-size: 0.7rem;
            opacity: 0.5;
            margin-top: -5px;
        }

        /* --- TIMELINE --- */
        .timeline-scroll-area {
            width: 100%;
            overflow-x: auto;
            padding: 20px 0 50px 0;
            scrollbar-width: none; 
        }
        .timeline-scroll-area::-webkit-scrollbar { display: none; }

        .timeline-wrapper {
            display: flex;
            min-width: max-content;
            padding: 0 40px;
            position: relative;
        }

        .timeline-line-bg {
            position: absolute;
            top: 52%; 
            left: 0;
            width: 100%;
            height: 1px;
            background-color: var(--rose-color);
            opacity: 0.4;
            z-index: 0;
        }

        .timeline-item {
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 180px; 
            position: relative;
            z-index: 1;
        }

        .year-photo-frame {
            width: 120px;
            height: 120px;
            background: var(--white);
            padding: 6px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.06);
            border-radius: 4px;
            margin-bottom: 15px;
        }
        .year-photo-frame img { width: 100%; height: 100%; object-fit: cover; }

        .timeline-dot {
            width: 10px;
            height: 10px;
            background-color: var(--rose-color);
            border-radius: 50%;
            border: 4px solid var(--bg-color);
            margin-bottom: 10px;
        }

        .year-text {
            font-family: 'Cormorant Garamond', serif;
            font-size: 1.4rem;
            font-weight: 600;
        }

        /* --- GALERIA POLAROID --- */
        .gallery-section {
            width: 90%;
            max-width: 1000px;
            margin-bottom: 40px;
            text-align: center;
        }

        .gallery-title {
            font-family: 'Cormorant Garamond', serif;
            font-size: 1.8rem;
            color: var(--text-color);
            margin-bottom: 40px;
            border-bottom: 1px solid var(--rose-light);
            display: inline-block;
            padding-bottom: 10px;
        }

        .gallery-grid {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 30px; 
        }

        .polaroid-card {
            background: white;
            padding: 12px 12px 50px 12px;
            box-shadow: 0 6px 15px rgba(0,0,0,0.1);
            transition: all 0.4s ease;
            width: 200px;
            position: relative;
            cursor: default;
        }

        .polaroid-card:nth-child(odd) { transform: rotate(3deg); }
        .polaroid-card:nth-child(even) { transform: rotate(-2deg); }
        
        .polaroid-card:hover {
            transform: scale(1.1) rotate(0deg) !important;
            z-index: 50;
            box-shadow: 0 15px 30px rgba(0,0,0,0.15);
        }

        .polaroid-card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            filter: sepia(10%);
            border: 1px solid #eee;
        }

        .polaroid-caption {
            position: absolute;
            bottom: 10px;
            left: 0;
            width: 100%;
            text-align: center;
            font-family: 'Great Vibes', cursive;
            color: #555;
            font-size: 1.2rem;
            opacity: 0.8;
        }

        .mensagem-final {
            width: 80%;
            max-width: 600px;
            text-align: center;
            margin: 40px 0 60px 0;
            font-size: 1.1rem;
            font-style: italic;
            color: #795548;
            line-height: 1.8;
            position: relative;
            padding: 20px;
        }
        
        .mensagem-final::before {
            content: "“";
            font-family: 'Cormorant Garamond', serif;
            font-size: 4rem;
            color: var(--rose-light);
            position: absolute;
            top: -20px;
            left: -10px;
            opacity: 0.5;
        }

        .rising-heart {
            position: fixed;
            bottom: -10vh;
            font-size: 1.5rem;
            pointer-events: none;
            z-index: 9999;
            will-change: transform, opacity;
            animation: riseUp ease-in forwards;
        }

        @keyframes riseUp {
            0% { opacity: 1; transform: translateY(0) scale(0.5); }
            100% { opacity: 0; transform: translateY(-120vh) scale(1.5); }
        }

        footer {
            margin-bottom: 40px;
            font-size: 0.85rem;
            color: var(--rose-color);
            text-align: center;
            font-weight: 500;
        }

    </style>
</head>
<body>

    <header>
        <h1><span id="titulo-anos">...</span> Anos de Nós</h1>
        <div class="data-destaque">Desde 10 . 01 . 2020</div>
        
        <p class="texto-intro">
            Parece que foi ontem que a gente começou, mas já vivemos tanta coisa incrível. 
            Essa data é a prova de que a vida fica muito mais leve e divertida com você. 
            Que a gente continue crescendo, aprendendo e rindo juntos. Te amo!
        </p>
    </header>

    <div class="clock-container">
        <div class="time-block"><div class="time-number" id="anos">00</div><div class="time-label">Anos</div></div>
        <div class="separator">:</div>
        <div class="time-block"><div class="time-number" id="dias">00</div><div class="time-label">Dias</div></div>
        <div class="separator">:</div>
        <div class="time-block"><div class="time-number" id="horas">00</div><div class="time-label">Horas</div></div>
        <div class="separator">:</div>
        <div class="time-block"><div class="time-number" id="minutos">00</div><div class="time-label">Min</div></div>
    </div>

    <div class="love-wrapper" onclick="ativarEfeitos()">
        <div class="love-text" id="loveText">Eu te amo muito</div>
        <div class="instrucao-toque">(clique aqui)</div>
    </div>

    <div class="timeline-scroll-area">
        <div class="timeline-wrapper">
            <div class="timeline-line-bg"></div>

            <div class="timeline-item">
                <div class="year-photo-frame">
                    <img src="foto2020.jpg" alt="2020">
                </div>
                <div class="timeline-dot"></div>
                <div class="year-text">2020</div>
            </div>

            <div class="timeline-item">
                <div class="year-photo-frame">
                    <img src="foto2021.jpg" alt="2021">
                </div>
                <div class="timeline-dot"></div>
                <div class="year-text">2021</div>
            </div>

            <div class="timeline-item">
                <div class="year-photo-frame">
                    <img src="foto2022.jpg" alt="2022">
                </div>
                <div class="timeline-dot"></div>
                <div class="year-text">2022</div>
            </div>

            <div class="timeline-item">
                <div class="year-photo-frame">
                    <img src="foto2023.jpg" alt="2023">
                </div>
                <div class="timeline-dot"></div>
                <div class="year-text">2023</div>
            </div>

            <div class="timeline-item">
                <div class="year-photo-frame">
                    <img src="foto2024.jpg" alt="2024">
                </div>
                <div class="timeline-dot"></div>
                <div class="year-text">2024</div>
            </div>

            <div class="timeline-item">
                <div class="year-photo-frame">
                    <img src="foto2025.jpg" alt="2025">
                </div>
                <div class="timeline-dot"></div>
                <div class="year-text">2025</div>
            </div>
        </div>
    </div>

    <section class="gallery-section">
        <h2 class="gallery-title">Nossas Memórias</h2>
        <div class="gallery-grid">
            
            <div class="polaroid-card">
                <img src="galeria1.jpg" alt="Foto">
                <div class="polaroid-caption">Sorrisos</div>
            </div>

            <div class="polaroid-card">
                <img src="galeria2.jpg" alt="Foto">
                <div class="polaroid-caption">Viagens</div>
            </div>

            <div class="polaroid-card">
                <img src="galeria3.jpg" alt="Foto">
                <div class="polaroid-caption">Nós</div>
            </div>
            
            <div class="polaroid-card">
                <img src="galeria4.jpg" alt="Foto">
                <div class="polaroid-caption">Amor</div>
            </div>

        </div>
    </section>

    <div class="mensagem-final">
        Estes são apenas alguns momentos registrados, mas na nossa memória temos muitos outros. 
        Que nossa história continue a crescer e florescer, dia após dia.
    </div>

    <footer>
        Criado de seu amor Richard para meu amor eterno Harumi. <br>
        10/01/2026
    </footer>

    <script>
        const startDate = new Date(2020, 0, 10, 0, 0); 

        function updateClock() {
            const now = new Date();
            const diff = now - startDate;
            const daysTotal = Math.floor(diff / (1000 * 60 * 60 * 24));
            const years = Math.floor(daysTotal / 365.25);
            const days = Math.floor(daysTotal % 365.25);
            const hours = Math.floor((diff / (1000 * 60 * 60)) % 24);
            const minutes = Math.floor((diff / (1000 * 60)) % 60);

            const format = (num) => num < 10 ? `0${num}` : num;

            document.getElementById('anos').innerText = format(years);
            document.getElementById('dias').innerText = format(days);
            document.getElementById('horas').innerText = format(hours);
            document.getElementById('minutos').innerText = format(minutes);
            document.getElementById('titulo-anos').innerText = years;
        }
        setInterval(updateClock, 1000);
        updateClock();

        let isPulsing = false;
        function ativarEfeitos() {
            const textElement = document.getElementById('loveText');
            if (!isPulsing) {
                isPulsing = true;
                textElement.classList.add('pulsing-slow');
                setTimeout(() => {
                    textElement.classList.remove('pulsing-slow');
                    isPulsing = false;
                }, 4000);
            }
            createRisingHearts();
        }

        function createRisingHearts() {
            for (let i = 0; i < 20; i++) {
                const heart = document.createElement('div');
                heart.innerHTML = '❤️'; 
                heart.classList.add('rising-heart');
                heart.style.left = Math.random() * 100 + 'vw';
                heart.style.fontSize = (Math.random() * 20 + 15) + 'px';
                heart.style.animationDuration = (Math.random() * 3 + 3) + 's';
                document.body.appendChild(heart);
                setTimeout(() => { heart.remove(); }, 6000);
            }
        }
    </script>
</body>
</html>
